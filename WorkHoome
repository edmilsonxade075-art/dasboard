<script>
/* ===== LOGIN ===== */
const authModal = document.getElementById("authModal");

(function(){
  const u = localStorage.getItem("usuarioLogado");
  if(u){
    authModal.classList.remove("active");
    document.querySelector(".user-avatar").innerText = u[0].toUpperCase();
    document.querySelector(".user-info span").innerText = u;
  }
})();

function login(){
  const user = authUser.value;
  const pass = authPass.value;
  const users = JSON.parse(localStorage.getItem("usuarios")) || [];
  const ok = users.find(u=>u.user===user && u.pass===pass);
  if(!ok) return alert("Login invÃ¡lido");
  localStorage.setItem("usuarioLogado", user);
  location.reload();
}

function mostrarRegistro(){
  authTitle.innerText="Criar Conta";
  authModal.querySelector("button").innerText="Registrar";
  authModal.querySelector("button").onclick=registrar;
}

function registrar(){
  const users = JSON.parse(localStorage.getItem("usuarios"))||[];
  users.push({user:authUser.value, pass:authPass.value});
  localStorage.setItem("usuarios", JSON.stringify(users));
  alert("Conta criada!");
  location.reload();
}

function logout(){
  localStorage.removeItem("usuarioLogado");
  location.reload();
}

/* ===== SEU JS ORIGINAL (SIMPLIFICADO AQUI) ===== */
let saldoAtual = 12450;
function atualizarSaldo(){
  saldo.innerText = saldoAtual.toLocaleString("pt-BR",{minimumFractionDigits:2})+" Kz";
}
function depositar(){
  saldoAtual += Number(valor.value||0);
  atualizarSaldo();
}
function retirar(){
  saldoAtual -= Number(valor.value||0);
  atualizarSaldo();
}
atualizarSaldo();
</script>

